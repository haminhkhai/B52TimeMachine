
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ps List</h2>
<a class="btn btn-secondary btn-new-ps" href="/ps/new">New</a>

<div class="table-wrapper">
    <table id="js-table-pss" style="width:100%" class="display compact">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
@section scripts{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            var table = $("#js-table-pss").DataTable({
                ajax: {
                    url: "/api/ps",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, pss) {
                            return "<a href='/ps/edit/" + pss.psId + "'>" + data + "</a>";
                        }
                    },
                    {
                        data: "price"
                    },
                    {
                        data: "isVisible",
                        render: function (data) {
                            if (data) {
                                return "Visible";
                            }
                            else {
                                return "Invisible";
                            }
                        }
                    }
                ],
                searching: false,
                sorting: false,
                paging: false,
                bInfo: false
            });
        });
    </script>
}


