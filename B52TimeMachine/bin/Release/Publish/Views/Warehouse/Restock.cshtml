
@{
    ViewBag.Title = "Restock";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Restock</h2>
<div class="form-row">
    <div class="form-group col-md-2">
        <span>Month</span>
        <select id="select-month" name="status" class="form-control">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
            <option value="7">7</option>
            <option value="8">8</option>
            <option value="9">9</option>
            <option value="10">10</option>
            <option value="11">11</option>
            <option value="12">12</option>
        </select>
    </div>
    <div class="form-group col-md-3 d-flex flex-column">
        <button id="btn-get-restock" class="btn btn-secondary mt-auto">Get restock</button>
    </div>
    <div class="form-group col-md-2 d-flex flex-column">
        <a href="#" id="btn-new-restock" class="btn btn-secondary mt-auto">New</a>
    </div>
</div>
<div class="table-wrapper">
    <table id="js-table-restock" style="width:100%" class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Restock Date</th>
                <th>Total</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@*New restock service modal*@
<div class="modal fade bd-example-modal-sm" id="new-restock-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form id="form-new-restock">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="new-restock-title"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <table id="js-table-restock-services" style="width:100%" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th style="width:30%">Service</th>
                                <th>Quantity</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" id="btn-save-new-restock" class="btn btn-secondary">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.min.js"></script>
    <script src="~/Scripts/Rental/Restock.js"></script>
}
